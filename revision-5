import java.util.Scanner; //importamos la libreria java.util

public class Codigo5 {
	// Añadimos un metodo main
	public static void main(String[] args) {

//Creamos nuestra variable tipo scanner
	Scanner s = new Scanner(System.in); // Añanadimos el tipo de scanner System.in
	
		//Damos contexto al usuario de lo que queremos que introduzca // Corregimos la comilla doble
	    
		System.out.print("Introduzca un número: "); 
	    
	    int ni = s.nextInt();		//Cambiamos el tipo de dato
	    int c = ni;					
	    
	    // Inicializa los las variables 
	    int afo = 0;
	    int noAfo = 0;
	    
	    while (ni > 0) {
		  int digito = (int) (ni % 10);
	      if ((digito == 3) || (digito == 7) || (digito == 8) || (digito == 9)) {
			afo++;
	      } else {
			noAfo++;
		  
		  ni /= 10;
	    }

	    if (afo > noAfo) {
	      System.out.println("El " + c + " es un número afortunado."); //Se corrigio la palabra println 
	    } else {
	      System.out.println("El " + c + " no es un número afortunado.");
	    }
	   
	  }
	}
	}
